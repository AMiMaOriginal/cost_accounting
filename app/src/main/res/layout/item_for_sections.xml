<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/itemSection"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:button="@drawable/custom_checkbox"
            android:id="@+id/selectSection"/>

        <TextView
            android:id="@+id/nameSection"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="3dp"
            android:layout_toStartOf="@+id/spentAll"
            android:layout_toEndOf="@+id/selectSection"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/spentAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="3dp"
            android:textSize="17sp"
            style="@style/textPriceStyle"/>

    </RelativeLayout>

</LinearLayout>